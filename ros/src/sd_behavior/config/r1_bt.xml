<root main_tree_to_execute="BehaviorTree">
    <!-- ////////// -->
    <BehaviorTree ID="BehaviorTree">
        <ReactiveFallback>
            <Inverter>
                <Condition ID="IsArretUrgence"/>
            </Inverter>
            <Condition ID="IsTirettePresente"/>
            <SequenceStar>
                <SubTree ID="initRobot"/>
                <ReactiveSequence>
                    <Action ID="AfficherLeScore"/>
                    <ReactiveFallback>
                        <SubTree ID="campJaune"/>
                        <SubTree ID="campViolet"/>
                    </ReactiveFallback>
                </ReactiveSequence>
            </SequenceStar>
        </ReactiveFallback>
    </BehaviorTree>
    <!-- ////////// -->
    <BehaviorTree ID="TesterToutesLesVentouses">
        <Fallback>
            <SubTree ID="VentouseD"/>
            <SubTree ID="VentouseCD"/>
            <SubTree ID="VentouseDG"/>
            <SubTree ID="VentouseC"/>
            <SubTree ID="VentouseCDG"/>
            <SubTree ID="VentouseG"/>
            <SubTree ID="VentouseCG"/>
        </Fallback>
    </BehaviorTree>
    <!-- ////////// -->
    <BehaviorTree ID="VentouseC">
        <Sequence>
            <Condition ID="IsVentouseCentre"/>
            <Inverter>
                <Condition ID="IsVentouseDroite"/>
            </Inverter>
            <Inverter>
                <Condition ID="IsVentouseGauche"/>
            </Inverter>
            <Action middle_valve="true" right_valve="false" ID="Pince" left_valve="false"/>
        </Sequence>
    </BehaviorTree>
    <!-- ////////// -->
    <BehaviorTree ID="VentouseCD">
        <Sequence>
            <Condition ID="IsVentouseCentre"/>
            <Condition ID="IsVentouseDroite"/>
            <Inverter>
                <Condition ID="IsVentouseGauche"/>
            </Inverter>
            <Action middle_valve="true" right_valve="true" ID="Pince" left_valve="false"/>
        </Sequence>
    </BehaviorTree>
    <!-- ////////// -->
    <BehaviorTree ID="VentouseCDG">
        <Sequence>
            <Condition ID="IsVentouseCentre"/>
            <Condition ID="IsVentouseDroite"/>
            <Condition ID="IsVentouseGauche"/>
            <Action middle_valve="true" right_valve="true" ID="Pince" left_valve="true"/>
        </Sequence>
    </BehaviorTree>
    <!-- ////////// -->
    <BehaviorTree ID="VentouseCG">
        <Sequence>
            <Condition ID="IsVentouseCentre"/>
            <Inverter>
                <Condition ID="IsVentouseDroite"/>
            </Inverter>
            <Condition ID="IsVentouseGauche"/>
            <Action middle_valve="true" right_valve="false" ID="Pince" left_valve="true"/>
        </Sequence>
    </BehaviorTree>
    <!-- ////////// -->
    <BehaviorTree ID="VentouseD">
        <Sequence>
            <Inverter>
                <Condition ID="IsVentouseCentre"/>
            </Inverter>
            <Condition ID="IsVentouseDroite"/>
            <Inverter>
                <Condition ID="IsVentouseGauche"/>
            </Inverter>
            <Action middle_valve="false" right_valve="true" ID="Pince" left_valve="false"/>
        </Sequence>
    </BehaviorTree>
    <!-- ////////// -->
    <BehaviorTree ID="VentouseDG">
        <Sequence>
            <Inverter>
                <Condition ID="IsVentouseCentre"/>
            </Inverter>
            <Condition ID="IsVentouseDroite"/>
            <Condition ID="IsVentouseGauche"/>
            <Action middle_valve="false" right_valve="true" ID="Pince" left_valve="true"/>
        </Sequence>
    </BehaviorTree>
    <!-- ////////// -->
    <BehaviorTree ID="VentouseG">
        <Sequence>
            <Inverter>
                <Condition ID="IsVentouseCentre"/>
            </Inverter>
            <Inverter>
                <Condition ID="IsVentouseDroite"/>
            </Inverter>
            <Condition ID="IsVentouseGauche"/>
            <Action middle_valve="false" right_valve="false" ID="Pince" left_valve="true"/>
        </Sequence>
    </BehaviorTree>
    <!-- ////////// -->
    <BehaviorTree ID="campJaune">
        <ReactiveSequence>
            <Inverter>
                <Condition ID="IsCampViolet"/>
            </Inverter>
            <Condition ID="MinuterieNonEcoulee"/>
            <SequenceStar>
                <SequenceStar>
                    <Action ID="Aller" theta="0" y="0" x="-0.5"/>
                    <Action ID="Aller" theta="-1.57" y="0" x="0.05"/>
                    <Action ID="Aller" theta="-1.57" y="-1.275" x="0.05"/>
                    <Action ID="Aller" theta="-1.57" y="-1.18" x="0.05"/>
                    <Action ID="Aller" theta="-1.57" y="-1.18" x="-0.5"/>
                </SequenceStar>
                <SequenceStar>
                    <Action ID="Aller" theta="1.047" y="0.0" x="-0.75"/>
                    <SubTree ID="debloquerGoldenium"/>
                    <Action ID="Aller" theta="3.1416" y="0.75" x="-0.70"/>
                    <SubTree ID="ramasserGoldenium"/>
                    <Action ID="Aller" theta="0" y="-0.15" x="0.50"/>
                    <SubTree ID="deposerGoldenium"/>
                </SequenceStar>
            </SequenceStar>
        </ReactiveSequence>
    </BehaviorTree>
    <!-- ////////// -->
    <BehaviorTree ID="campViolet">
        <ReactiveSequence>
            <Condition ID="IsCampViolet"/>
            <Condition ID="MinuterieNonEcoulee"/>
            <SequenceStar>
                <SequenceStar>
                    <Action ID="Aller" theta="0" y="0" x="-0.5"/>
                    <Action ID="Aller" theta="1.57" y="0" x="0.05"/>
                    <Action ID="Aller" theta="1.57" y="1.275" x="0.05"/>
					<Action ID="Aller" theta="1.57" y="1.18" x="0.05"/>
                    <Action ID="Aller" theta="1.57" y="1.18" x="-0.5"/>
                </SequenceStar>
                <SequenceStar>
                    <Action ID="Aller" theta="-1.047" y="0.0" x="-0.75"/>
                    <SubTree ID="debloquerGoldenium"/>
                    <Action ID="Aller" theta="-3.1416" y="-0.75" x="-0.70"/>
                    <SubTree ID="ramasserGoldenium"/>
                    <Action ID="Aller" theta="0" y="0.15" x="0.50"/>
                    <SubTree ID="deposerGoldenium"/>
                </SequenceStar>
            </SequenceStar>
        </ReactiveSequence>
    </BehaviorTree>
    <!-- ////////// -->
    <BehaviorTree ID="debloquerGoldenium">
        <Action ID="Attendre" ms="10"/>
    </BehaviorTree>
    <!-- ////////// -->
    <BehaviorTree ID="deposerGoldenium">
        <Sequence>
            <Action ID="Bras" angle_base="53" angle_pince="140"/>
            <Action middle_valve="false" right_valve="false" ID="Pince" left_valve="false"/>
        </Sequence>
    </BehaviorTree>
    <!-- ////////// -->
    <BehaviorTree ID="initRobot">
        <Sequence>
            <Action ID="DefinirLeScore" score="50"/>
            <Action seconds="1398" ID="LancerLaMinuterie"/>
        </Sequence>
    </BehaviorTree>
    <!-- ////////// -->
    <BehaviorTree ID="poserPaletAuSol">
        <ReactiveSequence>
            <Inverter>
                <Condition ID="IsRobotEnMouvement"/>
            </Inverter>
            <Action ID="Bras" angle_base="70" angle_pince="110"/>
            <Action ID="Bras" angle_base="170" angle_pince="110"/>
            <Action ID="Bras" angle_base="175" angle_pince="53"/>
            <Action ID="Bras" angle_base="170" angle_pince="23"/>
            <Action middle_valve="false" right_valve="false" ID="Pince" left_valve="false"/>
            <Action ID="Bras" angle_base="170" angle_pince="80"/>
            <Action ID="Bras" angle_base="175" angle_pince="53"/>
            <Action ID="Bras" angle_base="71" angle_pince="110"/>
        </ReactiveSequence>
    </BehaviorTree>
    <!-- ////////// -->
    <BehaviorTree ID="prendrePaletAuSol">
        <ReactiveSequence>
            <Inverter>
                <Condition ID="IsRobotEnMouvement"/>
            </Inverter>
            <Fallback>
                <SequenceStar>
                    <Condition ID="IsPaletDroit"/>
                    <Condition ID="IsPaletGauche"/>
                    <Action ID="Bras" angle_base="170" angle_pince="80"/>
                    <Action ID="Bras" angle_base="180" angle_pince="51"/>
                    <Action ID="Bras" angle_base="156" angle_pince="27"/>
                    <SubTree ID="TesterToutesLesVentouses"/>
                    <Action ID="Bras" angle_base="170" angle_pince="110"/>
                    <Action ID="Bras" angle_base="90" angle_pince="110"/>
                </SequenceStar>
                <Action ID="Bras" angle_base="170" angle_pince="110"/>
                <Action ID="Bras" angle_base="90" angle_pince="110"/>
            </Fallback>
        </ReactiveSequence>
    </BehaviorTree>
    <!-- ////////// -->
    <BehaviorTree ID="prendrePaletReserve">
        <ReactiveSequence>
            <Inverter>
                <Condition ID="IsRobotEnMouvement"/>
            </Inverter>
            <ReactiveSequence>
                <Action ID="Bras" angle_base="0" angle_pince="0"/>
                <Action ID="Bras" angle_base="0" angle_pince="0"/>
                <SubTree ID="TesterToutesLesVentouses"/>
                <Action ID="Bras" angle_base="0" angle_pince="0"/>
            </ReactiveSequence>
        </ReactiveSequence>
    </BehaviorTree>
    <!-- ////////// -->
    <BehaviorTree ID="prendrePaletStockAvant">
        <ReactiveSequence>
            <Inverter>
                <Condition ID="IsRobotEnMouvement"/>
            </Inverter>
            <ReactiveFallback>
                <Action ID="Bras" angle_base="36" angle_pince="130"/>
                <Action ID="Bras" angle_base="35" angle_pince="140"/>
                <Action ID="Bras" angle_base="35" angle_pince="170"/>
                <Action ID="Bras" angle_base="38" angle_pince="180"/>
                <Action ID="Bras" angle_base="32" angle_pince="180"/>
                <SubTree ID="TesterToutesLesVentouses"/>
                <Action ID="Bras" angle_base="40" angle_pince="140"/>
                <Action ID="Bras" angle_base="40" angle_pince="90"/>
                <Action ID="Bras" angle_base="70" angle_pince="110"/>
            </ReactiveFallback>
        </ReactiveSequence>
    </BehaviorTree>
    <!-- ////////// -->
    <BehaviorTree ID="ramasserGoldenium">
        <ReactiveFallback>
            <Condition ID="IsRobotEnMouvement"/>
            <ReactiveSequence>
                <Inverter>
                    <Condition ID="IsCampViolet"/>
                </Inverter>
                <Action ID="Bras" angle_base="0" angle_pince="0"/>
                <SubTree ID="VentouseG"/>
                <Action ID="Bras" angle_base="70" angle_pince="110"/>
            </ReactiveSequence>
            <ReactiveSequence>
                <Condition ID="IsCampViolet"/>
                <Action ID="Bras" angle_base="0" angle_pince="0"/>
                <SubTree ID="VentouseD"/>
                <Action ID="Bras" angle_base="70" angle_pince="110"/>
            </ReactiveSequence>
        </ReactiveFallback>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Action ID="AfficherLeScore"/>
        <Action ID="AjouterAuScore">
            <input_port default="1" name="score">Valeur Ã  ajouter au score</input_port>
        </Action>
        <Action ID="Aller">
            <input_port default="0" name="theta">Angle du robot (en degree)</input_port>
            <input_port default="0" name="x">Position absolue en X (en metre)</input_port>
            <input_port default="0" name="y">Position absolue en Y (en metre)</input_port>
        </Action>
        <Action ID="Attendre">
            <input_port default="1000" name="ms">Temps en millisecondes</input_port>
        </Action>
        <Action ID="Bras">
            <input_port default="0" name="angle_base">Angle moteur au plus pres de la base</input_port>
            <input_port default="0" name="angle_pince">Angle moteur au plus pres de la pince</input_port>
        </Action>
        <Action ID="DefinirLeScore">
            <input_port default="0" name="score">Valeur du score</input_port>
        </Action>
        <Action ID="DefinirTempsMinuterie">
            <input_port default="1398" name="seconds">Temps de la minuterie en secondes</input_port>
        </Action>
        <Action ID="InitialiserPosition"/>
        <Condition ID="IsArretUrgence"/>
        <Condition ID="IsCampViolet"/>
        <Condition ID="IsPaletCentre"/>
        <Condition ID="IsPaletDroit"/>
        <Condition ID="IsPaletGauche"/>
        <Condition ID="IsRobotEnMouvement"/>
        <Condition ID="IsTirettePresente"/>
        <Condition ID="IsVentouseCentre"/>
        <Condition ID="IsVentouseDroite"/>
        <Condition ID="IsVentouseGauche"/>
        <Action ID="LancerLaMinuterie">
            <input_port name="seconds"/>
        </Action>
        <Condition ID="MinuterieNonEcoulee"/>
        <Action ID="Pince">
            <input_port default="false" name="left_valve"/>
            <input_port default="false" name="middle_valve"/>
            <input_port default="false" name="right_valve"/>
        </Action>
        <Condition ID="ScoreInferieurA">
            <input_port default="1" name="score">Score</input_port>
        </Condition>
        <Condition ID="ScoreSuperieurA">
            <input_port default="0" name="score">Score</input_port>
        </Condition>
        <SubTree ID="TestSensors"/>
        <SubTree ID="TesterToutesLesVentouses"/>
        <SubTree ID="VentouseC"/>
        <SubTree ID="VentouseCD"/>
        <SubTree ID="VentouseCDG"/>
        <SubTree ID="VentouseCG"/>
        <SubTree ID="VentouseD"/>
        <SubTree ID="VentouseDG"/>
        <SubTree ID="VentouseG"/>
        <Action ID="VitesseConstante">
            <input_port default="0" name="angular_z">Vitesse de rotation en rad/s</input_port>
            <input_port default="0" name="linear_x">Vitesse dans le sens avant/arriere en m/s</input_port>
            <input_port default="0" name="linear_y">Vitesse dans le sens droite/gauche en m/s</input_port>
        </Action>
        <SubTree ID="campJaune"/>
        <SubTree ID="campViolet"/>
        <Condition ID="checkPosition">
            <input_port name="x"/>
            <input_port name="y"/>
        </Condition>
        <SubTree ID="debloquerGoldenium"/>
        <SubTree ID="deposerGoldenium"/>
        <SubTree ID="initRobot"/>
        <SubTree ID="poserPaletAuSol"/>
        <SubTree ID="prendrePaletAuSol"/>
        <SubTree ID="prendrePaletReserve"/>
        <SubTree ID="prendrePaletStockAvant"/>
        <SubTree ID="ramasserGoldenium"/>
    </TreeNodesModel>
    <!-- ////////// -->
</root>

